@model List<ApiProjeKampi.WebUI.Dtos.AISuggestionDtos.MenuSuggestionDto>

<div class="col-md-6 col-lg-12 col-xl-6">
    <div class="card">
        <div class="card-header">
            <h4>AI Daily Menus</h4>
            <form class="card-header-form">
                <input type="text" name="search" class="form-control" placeholder="Search in menus...">
            </form>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                foreach (var menu in Model)
                {
                    <div class="support-ticket media pb-1 mb-3">
                        <img src="https://flagcdn.com/24x18/@(menu.CountryCode.ToLower()).png" class="user-img mr-2" alt="@menu.Cuisine">
                        <div class="media-body ml-3">
                            <div class="badge badge-pill badge-primary mb-1 float-right">@menu.Cuisine</div>
                            <span class="font-weight-bold">Günlük Menü</span>
                            <a href="javascript:void(0)">Today's Menu</a>
                            <ul class="my-1">
                                @foreach (var item in menu.Items)
                                {
                                    <li>
                                        <strong>@item.Name</strong> – @item.Description (@item.Price ₺)
                                    </li>
                                }
                            </ul>
                            <small class="text-muted">
                                Generated by <span class="font-weight-bold font-13">AI Chef</span>
                                &nbsp;&nbsp; - @DateTime.Now.ToString("dd MMM yyyy")
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Henüz menü yok.</p>
            }
        </div>
    </div>
</div>
