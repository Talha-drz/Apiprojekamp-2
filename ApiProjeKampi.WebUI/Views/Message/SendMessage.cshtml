@model CreateMessageDto
 
<form asp-action="SendMessage" method="post" asp-controller="Message"  data-aos="fade-up" data-aos-delay="600">
    <div class="row gy-4">

        <div class="col-md-6">
            <input type="text" asp-for="NameSurname" class="form-control" placeholder="Adınız Soyadınızın amı" required="">
        </div>

        <div class="col-md-6 ">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz" required="">
        </div>

        <div class="col-md-12">
            <input type="text" class="form-control" asp-for="Subject" placeholder="Konumun" required="">
        </div>

        <div class="col-md-12">
            <textarea class="form-control" asp-for="MessageDetails" rows="6" placeholder="Mesajınız" required=""></textarea>
        </div>

        <div class="col-md-12 text-center">
            @* class="php-email-form"
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div> *@

            <button type="submit">Mesajı gönder</button>
        </div>
    </div>
</form><!-- End Contact Form -->